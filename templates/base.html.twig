{% block header2 %}
    <header>
        <img src="{{asset('img/logo.png')}}" alt="">
        <span class="co">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                Bonjour {{ app.user.firstName }}. <a href="{{ path('app_logout') }}">Me déconnecter</a>
            {% else %}
                <a href="{{ path('app_login') }}">Me connecter</a>
                <a href="{{ path('app_registration') }}">S'inscrire</a>

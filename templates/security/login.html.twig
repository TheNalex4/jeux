{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block idpage %}login{% endblock %}
{% block classpage %}formulaire{% endblock %}

{% block header2 %}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion </a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connecter vous</h1>
        <div class="email input">
            <!-- <label for="inputEmail">Email</label> -->
            <input type="email" value="{{ last_username }}" name="email" placeholder="Email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="psw input">
            <!-- <label for="inputPassword">Password</label> -->
            <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            S'identifier
        </button>
    </form>
{% endblock %}
